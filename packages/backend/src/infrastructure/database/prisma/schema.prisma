datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id               String   @id @default(uuid())
  addedAt          DateTime @default(now())
  title            String
  overview         String
  releaseDate      DateTime
  time             Int
  country          String
  authors          String
  genre            String
  ageRate          Int
  originalLanguage String
  budget           BigInt
  revenue          BigInt
  reviewId         String?
}
